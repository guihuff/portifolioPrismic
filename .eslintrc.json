{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "indent": [
        "error",
        "tab"
    ],
    "linebreak-style": [
        "error",
        "unix"
    ],
    "quotes": [
        "error",
        "single"
    ],
    "semi": [
        "error",
        "always"
    ],
    // suppress errors for missing 'import React' in files
    "react/react-in-jsx-scope": "off",
    "react/react-in-tsx-scope": "off"
}
}
